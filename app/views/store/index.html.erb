<% if notice %>
    <aside id="notice"><%= notice %></aside>
<% end %>

<h1>Your Pragmatic Catalog</h1>

<ul class="catalog">
    <% @products.each do |product| %>
        <li>
            <div class="left">
                <%= image_tag(product.image_url) %>
            </div>
            <div class="right">
                <h2><%= product.title %></h2>
                <p>
                    <%= sanitize(product.description) %>
                </p>
                <div class="price">
                    <%= number_to_currency(product.price) %>
                </div>
            </div> 
        </li>
    <% end %>
</ul>